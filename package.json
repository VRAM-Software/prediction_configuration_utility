{
  "name": "prediction_configuration_utility",
  "productName": "VRAM Software - Grafana prediction",
  "version": "0.0.1",
  "author": "VRAM-Software",
  "private": true,
  "description": "Applicativo Esterno Gruppo VRAM",
  "homepage": "./",
  "main": "src/viewmodel/main.js",
  "build": {
    "appId": "com.vramsoftware.prediction_configuration_utility",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "publish": {
      "provider": "github",
      "repo": "https://github.com/VRAM-Software/prediction_configuration_utility/",
      "owner": "VRAM-Software"
    }
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "csvtojson": "^2.0.10",
    "d3": "^5.15.0",
    "electron-is-dev": "^1.1.0",
    "ml-modules": "https://github.com/Max09081998/ml-modules/tarball/master",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.0"
  },
  "scripts": {
    "electron": "electron .",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "ci-test": "react-scripts test --watchAll=false --coverage --coverageReporters=text-lcov | coveralls",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . PCU --overwrite --asar --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Electron Tutorial App\"",
    "package-linux": "electron-packager . PCU --overwrite --asar --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=release-builds"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 80,
        "branches": 80,
        "functions": 80,
        "lines": 80
      }
    },
    "coveragePathIgnorePatterns": [
      "src/index.js",
      "src/viewmodel/main.js",
      "src/tests/mocks/mockFile.js",
      "src/model/algorithm/lib/regression.module.js"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "coveralls": "^3.0.9",
    "electron": "^8.1.1",
    "electron-packager": "^14.2.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "spectron": "^10.0.1"
  }
}
